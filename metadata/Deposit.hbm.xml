<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.openmrs.module.mohbilling.model">

	<!-- Deposit -->
	
	<class name="Deposit" table="moh_bill_deposit">

		<id name="depositId" type="int" column="deposit_id" unsaved-value="0">
			<generator class="native" />
		</id>
		
		<property name="amount" column="amount" type="big_decimal" />
		<property name="depositDate" column="deposit_date" />
		<property name="depositReason" column="deposit_reason" type="text" />
		<property name="createdDate" column="created_date" />
		<property name="voided" column="voided" type="boolean" />
		<property name="voidedDate" column="voided_date" />
		<property name="voidReason" column="void_reason" type="text" />
		
		<many-to-one name="patient" class="org.openmrs.Patient" column="patient_id" />
		<many-to-one name="cashier" class="org.openmrs.User" column="cashier" />
		<many-to-one name="creator" class="org.openmrs.User" column="creator" />
		<many-to-one name="voidedBy" class="org.openmrs.User" column="voided_by" />
		
		<set name="withdrawals" lazy="false" inverse="true"
			cascade="all-delete-orphan" sort="natural"
			order-by="withdrawal_date asc">
			<key column="deposit_id" />
			<one-to-many class="DepositWithdrawal" />
		</set>
	</class>
	
</hibernate-mapping>
